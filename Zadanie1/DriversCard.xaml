<Window x:Class="Zadanie1.DriversCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="DriversCard" Height="250" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Margin="10" Click="Button_Click">
            <StackPanel Orientation="Horizontal" Width="450">
                <Image Source="/Assets/Driver.png" Width="80"></Image>
                <TextBlock Text="Список водителей" VerticalAlignment="Center" Margin="100 0 0 0" FontSize="20"></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="10" Grid.Row="1" Click="Button_Click_1">
            <StackPanel Orientation="Horizontal" Width="450">
                <Image Source="/Assets/DriverCard.png" Width="80"></Image>
                <TextBlock Text="Список удостоверений" VerticalAlignment="Center" Margin="100 0 0 0" FontSize="20"></TextBlock>
            </StackPanel>
        </Button>
        
    </Grid>
</Window>
